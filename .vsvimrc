 let mapleader = " "

" Replace word under cursor
nnoremap <leader>r :%s/\<<C-r><C-w>\>/<C-r><C-w>/gI<Left><Left><Left>

" Move lines
vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv

" Keep screen center
nnoremap <C-d> <C-d>zz
nnoremap <C-u> <C-u>zz
nnoremap n nzzzv
nnoremap N Nzzzv

" Save file
nnoremap <C-s> :w<CR>

" Indentation
vnoremap < <gv
vnoremap > >gv

set nu
set relativenumber
set scrolloff=10
set ignorecase
set smartcase
set showcmd
set incsearch
set visualbell
set hlsearch
set clipboard=unnamed

map <leader>fo :vsc Edit.FormatSelection<CR>
nmap <S-k> :vsc Edit.QuickInfo<CR>
nmap <C-Enter> :vsc View.QuickActions<CR>
map ]d :vsc View.NextError<CR>
map [d :vsc View.PreviousError<CR>
map <C-/> :vsc Edit.CommentSelection<CR>
map <leader>ff :vsc Edit.GoToFile<CR>
nmap <leader>[ :vsc Edit.CollapseCurrentRegion<CR>
nmap <leader>] :vsc Edit.ExpandCurrentRegion<CR>
