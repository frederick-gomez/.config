{
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 120,
  "editor.wordWrap": "off",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'CaskaydiaCove Nerd Font', Consolas, 'Courier New', monospace",
  "editor.lineNumbers": "relative",
  "editor.fontLigatures": true,
  "editor.autoClosingBrackets": "always",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font', 'CaskaydiaCove Nerd Font', Consolas, 'Courier New', monospace",
  "terminal.explorerKind": "both",
  "terminal.integrated.defaultLocation": "editor",

  "vim.textwidth": 120,
  "vim.vimrc.enable": false,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.useSystemClipboard": true,
  "vim.leader": " ",
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-b>": false,
    "<C-p>": true,
    "<C-z>": true,
    "<C-w>": true
  },
  "vim.normalModeKeyBindings": [
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["leader", "n"],
      "commands": [":nohl"]
    },
    {
      "before": ["leader", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["leader", "f", "e"],
      "commands": ["workbench.files.action.focusFilesExplorer"]
    },
    {
      "before": ["leader", "f", "o"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["leader", "["],
      "commands": ["editor.fold"]
    },
    {
      "before": ["leader", "]"],
      "commands": ["editor.unfold"]
    },
    {
      "before": ["<C-w>", "c"],
      "commands": ["workbench.action.closeActiveEditor"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["g", "H"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"]
    },
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"]
    },
    {
      "before": ["leader", "f", "o"],
      "commands": ["editor.action.formatSelection"]
    }
  ]
}
